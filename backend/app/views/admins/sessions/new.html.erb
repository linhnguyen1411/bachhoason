<div class="reg-block">
  <div class="reg-block-header">
    <h2><%= t ".title" %></h2>
    <p><%= t ".description" %></p>
  </div>
  <%= form_for resource, as: resource_name, url: admins_sessions_path(resource_name), html: {id: "form-login"} do |f| %>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",
          id: "user-login-email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        <%= f.password_field :password, autofocus: true, autocomplete: "email", class: "form-control",
          id: "user-login-password" %>
      </div>
    </div>
    <hr>
    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me %>
        <p><%= t ".remember_me" %></p>
      </label>
    </div>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="text-center">
          <button type="submit" class="btn btn-default btn-lock"> <%= t ".btn" %></button>
          <button type="button" class="btn btn-default" onclick="window.location.href = '<%= new_admin_password_path %>'">
            <%= t ".forgot_password" %>
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>
