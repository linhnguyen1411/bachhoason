<div id="catalog-modal" class="modal fade"role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h2 class="modal-title"><i class="fa fa-pencil"></i> Nhà cung cấp sơn</h2>
      </div>
      <div class="modal-body">
        <div class="form-horizontal form-bordered">
          <fieldset>
            <div class="form-group">
              <label class="col-md-4 control-label" for="example-chosen">Danh mục</label>
              <div class="col-md-6 form-group-validate">
                <select class="select2" style="width: 100%" ng-model="vm.currentCatalog.parent_id" id="select-parent-catalog" convert-to-number>
                  <option value="" selected>Please select</option>
                  <option ng-repeat="catalog in vm.catalogs_selection" value="{{catalog.id}}" ng-bind="catalog.name"></option>
                </select>
              </div>
            </div>
          </fieldset>
          <fieldset>
            <div class="form-group">
              <label class="col-md-4 control-label" for="catalog-name">Tên danh mục</label>
              <div class="col-md-6 form-group-validate">
                <input id="catalog-name" type="text" ng-model="vm.currentCatalog.name" name="catalog[name]" class="form-control" placeholder="Nhập tên danh mục">
                <span class="help-block">Nhập vào tên danh mục</span>
              </div>
            </div>
          </fieldset>
          <fieldset>
            <div class="form-group form-actions">
              <div class="col-md-9 col-md-offset-3">
                <button type="button" ng-click="vm.submit()" class="btn btn-sm btn-warning"> Lưu</button>
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Đóng</button>
              </div>
            </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
</div>
